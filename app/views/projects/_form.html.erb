<%= form_for @project do |f| %>
	<% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3><%= f.label :name %></h3>
  <%= f.text_field :name %>

  <h3><%= f.label :description %></h3>
  <%= f.text_area :description, placeholder: "255 characters max" %>

	<h3><%= f.label :video %></h3>
  <%= f.text_field :video, placeholder: "Add Vimeo Link" %>

  <h3><%= f.label :repo %></h3>
  <%= f.text_field :repo, placeholder: "Add Project Repo Link" %>

  <h3><%= f.label :tag_list, "Tags (separated by commas)" %></h3>
  <%= f.text_field :tag_list %>
  
  <br>
  <%= f.submit %>

<% end %>
  
